{
  "manifest_version": 2,
  "name": "Word-count-Extension",
  "description": "With this extension you can count the number of words in the selected text",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [     
          "contextMenus"
        ]
}